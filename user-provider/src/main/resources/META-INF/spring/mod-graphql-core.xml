<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd

                           http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="dxGraphQLQueryProvider" class="org.jahia.modules.graphql.provider.DXGraphQLQueryProvider">
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="nodeTypeRegistry" ref="nodeTypeRegistry"/>
    </bean>

    <osgi:service ref="dxGraphQLQueryProvider" auto-export="interfaces"/>

    <bean id="dxGraphQLMutationProvider" class="org.jahia.modules.graphql.provider.DXGraphQLMutationProvider">
    </bean>

    <osgi:service ref="dxGraphQLMutationProvider" auto-export="interfaces"/>

</beans>